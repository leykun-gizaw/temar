{$DOMAIN:localhost} {
	# Notion webhook endpoint â€” forwarded to the sync service
	handle /api/webhook/* {
		reverse_proxy notion_sync-service:3333
	}

	# Next.js web app (everything else)
	handle {
		reverse_proxy web:5173
	}

	# Encode responses with gzip/zstd
	encode zstd gzip

	# Security headers
	header {
		X-Content-Type-Options nosniff
		X-Frame-Options DENY
		Referrer-Policy strict-origin-when-cross-origin
	}
}

# AppSmith setup
admin.temar.leyk14.com {
	reverse_proxy appsmith:4443
}