{$DOMAIN:localhost} {
	# Next.js web app
	reverse_proxy web:5173

	# Encode responses with gzip/zstd
	encode zstd gzip

	# Security headers
	header {
		X-Content-Type-Options nosniff
		X-Frame-Options DENY
		Referrer-Policy strict-origin-when-cross-origin
	}
}

